# Allow hal_audio_default to read and write to proc_oppo_extra
allow hal_audio_default proc_oppo_extra:dir search;
allow hal_audio_default proc_oppo_extra:file rw_file_perms;

allow hal_audio_default sysfs:dir r_dir_perms;
allow hal_audio_default sysfs:file rw_file_perms;

hal_client_domain(hal_audio_default, hal_power);

allow hal_audio_default mnt_vendor_file:dir search;
allow hal_audio_default vendor_persist_audio_file:dir search;
allow hal_audio_default vendor_persist_audio_file:lnk_file read;
r_dir_file(hal_audio_default, vendor_persist_audio_file);
allow hal_audio_default proc_audio_file:file { read };

set_prop(hal_audio_default, vendor_audio_prop)
get_prop(hal_audio_default, vendor_audio_prop)

# Dolby
allow hal_audio_default hal_dms_default:binder { transfer call };
allow hal_audio_default hal_dms_hwservice:hwservice_manager find;

dontaudit hal_audio_default default_prop:file read;
